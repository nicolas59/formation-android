<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:background="@android:drawable/sym_def_app_icon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactTf"
            android:layout_marginLeft="5dp"
            android:text="Un contact"
            android:elegantTextHeight="false"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:autoText="false"
            android:textIsSelectable="false"
            android:editable="false"
            android:padding="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Messages"
            android:id="@+id/contactNb"
            android:padding="5dp"
            android:layout_below="@+id/contactTf"
            android:layout_alignStart="@+id/contactTf" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:id="@+id/imageView3"
            android:layout_below="@+id/contactNb"
            android:layout_alignStart="@+id/contactNb"
            android:background="@color/button_material_light" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageButton"
            android:layout_below="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:src="@android:drawable/stat_sys_phone_call"
            android:background="@drawable/icon_phone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_below="@+id/imageView3"
            android:layout_toEndOf="@+id/imageButton"
            android:src="@android:drawable/sym_action_email"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
